programa
{
	
inclua biblioteca Matematica --> mat
	funcao inicio()
	{
		inteiro ano

		escreva ("Informe um ano: ")
		leia(ano)

		se(ano == 0 ou ano < 0){
			ano = 2023
		}
		se(ano % 400 == 0 ou ano % 100 != 0 e ano % 4 == 0){
			escreva("Esse ano é bissexto!!!")
		}
		senao{
			escreva("Esse ano não é bissexto!!")
		}
	}
}
